{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://shamansir.github.io/genui.schema.json",
    "title": "GenUI",
    "description": "Generative UI definition",
    "type": "object",
    "properties": {
      "version": {
        "type": "string"
      },
      "root": {
        "type": "array",
        "items": { "$ref": "#/$defs/property" }
      }
    },
    "required": [ "version", "root" ],
    "$defs": {
        "property": {
            "type": "object",
            "properties":
                { "kind":
                    { "enum": [ "int", "float", "xy", "color", "text", "toggle", "action", "nest", "select" ] }
                , "name": { "type": "string" }
                , "shape": { "$ref": "#/$defs/cell_shape" }
                , "property": { "oneOf": [ { "type": "string" }, { "type": "null" } ] }
                , "live": { "type": "boolean" }
                },
            "required": [ "kind", "name", "def" ],
            "allOf": [
                {
                    "if": {
                        "properties": { "kind": { "const": "int" } },
                        "required": [ "kind" ]
                    },
                    "then": {
                        "properties": { "def": { "$ref": "#/$defs/int_def" } }
                    }
                },
                {
                    "if": {
                        "properties": { "kind": { "const": "float" } },
                        "required": [ "kind" ]
                    },
                    "then": {
                        "properties": { "def": { "$ref": "#/$defs/float_def" } }
                    }
                },
                {
                    "if": {
                        "properties": { "kind": { "const": "xy" } },
                        "required": [ "kind" ]
                    },
                    "then": {
                        "properties": { "def": { "$ref": "#/$defs/xy_def" } }
                    }
                },
                {
                    "if": {
                        "properties": { "kind": { "const": "color" } },
                        "required": [ "kind" ]
                    },
                    "then": {
                        "properties": { "def": { "$ref": "#/$defs/color_def" } }
                    }
                },
                {
                    "if": {
                        "properties": { "kind": { "const": "text" } },
                        "required": [ "kind" ]
                    },
                    "then": {
                        "properties": { "def": { "$ref": "#/$defs/textual_def" } }
                    }
                },
                {
                    "if": {
                        "properties": { "kind": { "const": "toggle" } },
                        "required": [ "kind" ]
                    },
                    "then": {
                        "properties": { "def": { "$ref": "#/$defs/toggle_def" } }
                    }
                },
                {
                    "if": {
                        "properties": { "kind": { "const": "action" } },
                        "required": [ "kind" ]
                    },
                    "then": {
                        "properties": { "def": { "$ref": "#/$defs/action_def" } }
                    }
                },
                {
                    "if": {
                        "properties": { "kind": { "const": "select" } },
                        "required": [ "kind" ]
                    },
                    "then": {
                        "properties": { "def": { "$ref": "#/$defs/select_def" } }
                    }
                },
                {
                    "if": {
                        "properties": { "kind": { "const": "nest" } },
                        "required": [ "kind" ]
                    },
                    "then": {
                        "properties": { "def": { "$ref": "#/$defs/nest_def" } }
                    }
                }
              ]
        },
        "int_def": {
            "type": "object",
            "properties":
                { "min": { "type": "integer" }
                , "max": { "type": "integer" }
                , "step": { "type": "integer" }
                , "current": { "type": "integer" }
                },
            "required": [ "min", "max", "current", "step" ]
        },
        "float_def": {
            "type": "object",
            "properties":
                { "min": { "type": "number" }
                , "max": { "type": "number" }
                , "step": { "type": "number" }
                , "current": { "type": "number" }
                },
            "required": [ "min", "max", "current", "step" ]
        },
        "xy_def": {
            "type": "object",
            "properties":
                { "x": { "$ref": "#/$defs/float_def" }
                , "y": { "$ref": "#/$defs/float_def" }
                },
            "required": [ "x", "y" ]
        },
        "color_def": {
            "type": "object",
            "properties":
                { "current": { "type": "string" }
                },
            "required": [ "current" ]
        },
        "textual_def": {
            "type": "object",
            "properties":
                { "current": { "type": "string" }
                },
            "required": [ "current" ]
        },
        "toggle_def": {
            "type": "object",
            "properties":
                { "current": { "type": "boolean" }
                },
            "required": [ "current" ]
        },
        "action_def": {
            "type": "object",
            "properties":
                { "face": { "$ref": "#/$defs/face" }
                }
        },
        "nest_def": {
            "type": "object",
            "properties":
                { "expand": { "type": "boolean" }
                , "face": { "$ref": "#/$defs/face" }
                , "shape": { "$ref": "#/$defs/nest_shape" }
                , "children" :
                    { "type": "array"
                    , "items": { "$ref": "#/$defs/property" }
                    }
                , "nestAt":
                    { "oneOf":
                        [ { "type": "string" }, { "type": "null" }
                        ]
                    }
                },
            "required": [ "children" ]
        },
        "select_def": {
            "type": "object",
            "properties":
                { "current": { "type": "string" }
                , "face": { "$ref": "#/$defs/face" }
                , "kind": { "$ref": "#/$defs/select_kind" }
                , "shape": { "$ref": "#/$defs/nest_shape" }
                , "values" :
                    { "type": "array"
                    , "items": { "$ref": "#/$defs/select_item" }
                    }
                , "nestAt":
                    { "oneOf":
                        [ { "type": "string" }, { "type": "null" }
                        ]
                    }
                },
            "required": [ "values", "current" ]
        },
        "cell_shape":
            { "oneOf":
                [ {
                    "type": "object",
                    "properties":
                        { "cols": { "type": "integer" }
                        , "rows": { "type": "integer" }
                        },
                    "required": [ "cols", "rows" ]
                },
                { "type": "null" }
                ]
            },
        "nest_shape":
            { "oneOf":
                [ {
                    "type": "object",
                    "properties":
                        { "cols": { "type": "integer" }
                        , "rows": { "type": "integer" }
                        , "pages": { "type": "integer" }
                        },
                    "required": [ "cols", "rows", "pages" ]
                },
                { "type": "null" }
                ]
            },
        "face": {
            "oneOf": [
                { "type": "object"
                , "properties":
                    { "face": { "const": "color" }
                    , "color": { "type": "string" }
                    }
                , "required": [ "face", "color" ]
                },
                { "type": "object"
                , "properties":
                    { "face": { "const": "icon" }
                    , "icon": { "type": "string" }
                    }
                , "required": [ "face", "icon" ]
                },
                { "type": "null" }
            ]
        },
        "select_kind": {
            "oneOf": [
                { "type": "object"
                , "properties":
                    { "kind": { "const": "choice" }
                    , "face": { "$ref": "#/$defs/face" }
                    , "expand": { "type": "boolean" }
                    }
                , "required": [ "kind", "expand" ]
                },
                { "type": "object"
                , "properties":
                    { "kind": { "const": "knob" }
                    }
                , "required": [ "kind" ]
                },
                { "type": "object"
                , "properties":
                    { "kind": { "const": "switch" }
                    }
                , "required": [ "kind" ]
                }
            ]
        },
        "select_item": {
            "oneOf": [
                { "type": "string" },
                { "type": "object"
                , "properties":
                    { "value": { "type": "string" }
                    , "face": { "$ref": "#/$defs/face" }
                    , "name":
                        { "oneOf":
                            [ { "type": "string" }
                            , { "type": "null" }
                            ]
                        }
                    }
                , "required": [ "value" ]
                }
            ]
        }
    }
  }